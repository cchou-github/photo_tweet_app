<h1><%= t(".title")%></h1>

<%= form_for @picture do |f| %>
  <% if @picture.errors.any? %>
    <div class="error_messages">
      <ul>
        <% @picture.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <br>
  <div class="field">
    <%= f.label :image_file %>
    <%= f.file_field :image_file %>
  </div>

  <%= f.submit %><%= link_to t(".cancel"), pictures_path %>
<% end %>